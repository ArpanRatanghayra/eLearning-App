<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="210dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/mainText"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center_horizontal"
        android:text="ONLINE MARMAG\nTRAINING PROGRAM"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        app:layout_constraintVertical_bias="0.10" />

    <TextView
        android:id="@+id/subText"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:text="Bridging the gap between\ntheory and practise"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/mainText"
        app:layout_constraintEnd_toEndOf="@+id/mainText"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintStart_toStartOf="@+id/mainText"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        app:layout_constraintVertical_bias="0.65" />

</androidx.constraintlayout.widget.ConstraintLayout>